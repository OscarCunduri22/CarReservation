<div class="flex items-center justify-center h-screen">
  <%= form_with url: password_reset_path, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-1/3" do |form| %>
    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700 font-bold mb-2" do %>
        Correo electrónico
      <% end %>
      <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Ingrese su correo electrónico" %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit "Enviar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
