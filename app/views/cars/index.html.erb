<%= turbo_frame_tag 'types' do %>

  <h1 class="mt-20 px-5 font-semibold ">Veh√≠culos</h1>
  
  <section class="flex flex-col shadow-sm hover:hover:shadow-lg w-full my-4">
    <h3 class="font-semibold p-5">Categorias</h3>
    <div class="flex justify-between px-10">
      <%= link_to t('.all'), cars_path %>
      <%= render partial: 'type', collection: @types %>
    </div>

  </section>

  <main class="flex w-full p-5">
    <aside class="flex flex-col w-1/3">
      <%= render 'cars/filter' %>
      <%= render 'cars/order_by' %>
    </aside>
    <section class="flex flex-col w-2/3">
      <h2 class="font-semibold p-2">Vehiculos</h2>
      <p class='text-blue-500 p-2'>Avaliable vehicles <%= @cars.count %> </p>
      <div class="flex flex-wrap justify-between">
        <%= render partial: 'car', collection: @cars %>
      </div>
  </main>

<% end %>


